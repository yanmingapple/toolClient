{
  "name": "dbmanager-pro",
  "version": "1.0.0",
  "description": "A powerful database management tool like Navicat",
  "author": "Your Name",
  "license": "MIT",
  "main": "dist/electron/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "cross-env NODE_ENV=development tsc -p tsconfig.electron.json --watch",
    "dev:renderer": "cross-env NODE_ENV=development vite --config vite.config.ts",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.electron.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build:app": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "preview": "electron .",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@guolao/vue-monaco-editor": "^1.1.3",
    "@vue/shared": "^3.5.26",
    "crypto-js": "^4.1.1",
    "echarts": "^5.4.3",
    "element-plus": "^2.13.0",
    "ioredis": "^5.3.2",
    "lodash-es": "^4.17.21",
    "mongodb": "^6.3.0",
    "mysql2": "^3.6.5",
    "papaparse": "^5.4.1",
    "pg": "^8.11.3",
    "pinia": "^2.1.7",
    "sqlite3": "^5.1.7",
    "tedious": "^16.2.0",
    "vue": "^3.4.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@svgr/core": "^8.1.0",
    "@types/crypto-js": "^4.1.1",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.10.4",
    "@types/papaparse": "^5.3.14",
    "@types/pg": "^8.10.9",
    "@types/sqlite3": "^3.1.8",
    "@types/tedious": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^5.0.2",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "sass": "^1.69.7",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.10",
    "vite-plugin-svgr": "^4.5.0",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dbmanager.pro",
    "productName": "DBManager Pro",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png"
    }
  }
}

{
  "name": "dbmanager-pro",
  "version": "1.0.0",
  "description": "A powerful database management tool like Navicat",
  "author": "Your Name",
  "license": "MIT",
  "main": "dist/electron-main.js",
  "scripts": {
    "dev": "vite",
    "start": "concurrently \"vite --port 3000\" \"wait-on http://localhost:3000 && npm run build:electron-main && cross-env NODE_ENV=development electron .\"",
    "build": "tsc && vite build",
    "build:electron-main": "tsc -p tsconfig.electron.json",
    "build:electron": "tsc -p tsconfig.electron.json && vite build && electron-builder",
    "build:win": "tsc -p tsconfig.electron.json && vite build && electron-builder --win",
    "build:mac": "tsc -p tsconfig.electron.json && vite build && electron-builder --mac",
    "build:linux": "tsc -p tsconfig.electron.json && vite build && electron-builder --linux",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.5.1",
    "antd": "^5.12.0",
    "crypto-js": "^4.1.1",
    "echarts": "^5.4.3",
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "mysql2": "^3.6.5",
    "papaparse": "^5.4.1",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6",
    "tedious": "^16.2.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@svgr/core": "^8.1.0",
    "@types/crypto-js": "^4.1.1",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.10.4",
    "@types/papaparse": "^5.3.14",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/sqlite3": "^3.1.8",
    "@types/tedious": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-svgr": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dbmanager.pro",
    "productName": "DBManager Pro",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png"
    }
  }
}
